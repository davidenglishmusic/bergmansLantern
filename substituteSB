<script>
function lanternGo() {
  $("#slide1").fadeIn( 500 ).delay(3000).fadeOut( 500, function() { 
    $("#slide2").fadeIn( 500 ).delay(3000).fadeOut( 500, function() {
      $("#slide3").fadeIn( 500 ).delay(3000).fadeOut( 500, function() {
        lanternGo();
      });
    });
  });
}

$( document ).ready(function() {
setTimeout(function() {lanternGo();
},1500);
});
</script>


