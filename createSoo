function lanternSlideshow(imageArray) {
  this.imageArray = imageArray;
}

lanternSlideshow.prototype.getBergmanSlidesCode = function() {
  var bergmanFieldSetCode = '';
  for (var j=1; j < imageArray.length; j++) {
    bergmanFieldSetCode = bergmanFieldSetCode + '<div class="landternSlide" id="slide' + j + '"><img src="' + imageArray[j] + '" ></div>';
  }
  return bergmanFieldSetCode;
}

lanternSlideshow.prototype.getBergmanJSCode = function() {

  var jquerySlideLines = '';
  for (var k=1; k < imageArray.length; k++) {
    jquerySlideLines = jquerySlideLines + '$(#slide' + imageArray[k] '").fadeIn( 500 ).delay( 3000 ).fadeOut( 500, function() {'; 
  }
  var jquerySlideLineClosingTags = '';
  for (var q=1; q < imageArray.length; q++) {
    jquerySlideLineClosingTags = jquerySlideLineClosingTags + '});';
  }
  var lanternJSEnd = 'lanternGo();' + jquerySlideLineClosingTags + '}';
  return jquerySlideLines + lanternJSEnd;
}

lanternSlideshow.prototype.getEmbedCode = function() {

  var bergmanContainerCode = '<div id="bergmanSlideContainer" style="width:' + 960 + 'px;height:' + 300 + 'px;">';

  var bergmanSlidesCode = this.getBergmanSlidesCode + '</div>';

  var bergmanCodeToRunSlideshow = '$( document ).ready(function() { setTimeout(function() {lanternGo(); },1500); });';

  var bergmanJSCode = this.getBergmanJSCode + bergmanCodeToRunSlideshow;

  var bergmanStyleCode = '<style> #bergmanSlideContainer {position:relative;margin-left:auto;margin-right:auto;} .bergmanInner {position:absolute;display:none;} .bergmanInner img{width:100%;} </style>';

  return bergmanContainerCode + bergmanSlidesCode + bergmanJSCode + bergmanStyleCode;
}

lanternSlideshow.prototype.getDisplayCode = function() {
  code = lanternSlideshow.getEmbedCode;
  return '<pre>' + code + '</pre>';
}


